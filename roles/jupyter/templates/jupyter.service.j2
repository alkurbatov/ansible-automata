[Unit]
Description=Jupyter notebook
After=network.target

[Service]
User={{ jupyter_user }}
Group={{ jupyter_group }}
Environment=PYTHONHASHSEED=0
WorkingDirectory={{ jupyter_config_folder }}
ExecStart=/usr/bin/poetry run jupyter notebook
Restart=on-failure
RestartSec=5s
AllowedCPUs=0-{{ jupyter_cores - 1 }}

[Install]
WantedBy=multi-user.target
